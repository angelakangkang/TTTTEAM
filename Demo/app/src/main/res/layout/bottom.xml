<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp" >

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="fill_parent"
        android:layout_height="140px"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/homeRb"
            style="@style/main_tab_style"
            android:checked="true"
            android:drawableTop="@drawable/guide_home_img"
            android:text="首页"
            android:textColor="@drawable/main_tab_text_color" />

        <RadioButton
            android:id="@+id/prosortRb"
            style="@style/main_tab_style"
            android:drawableTop="@drawable/guide_team_img"
            android:text="TEAM圈"
            android:textColor="@drawable/main_tab_text_color" />

        <RadioButton
            android:id="@+id/trolleryRb"
            style="@style/main_tab_style"
            android:drawableTop="@drawable/guide_fabu_img"
            android:text="发布"
            android:textColor="@drawable/main_tab_text_color" />

        <RadioButton
            android:id="@+id/memberRb"
            style="@style/main_tab_style"
            android:drawableTop="@drawable/guide_news_img"
            android:text="消息"
            android:textColor="@drawable/main_tab_text_color" />

        <RadioButton
            android:id="@+id/searchRb"
            style="@style/main_tab_style"
            android:drawableTop="@drawable/guide_account_img"
            android:text="我"
            android:textColor="@drawable/main_tab_text_color" />
    </RadioGroup>

</LinearLayout>