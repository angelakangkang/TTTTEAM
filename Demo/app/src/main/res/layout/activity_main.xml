<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/whitesmoke"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <include layout="@layout/top"/>
<LinearLayout
    android:layout_weight="9"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="120dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/viewpager"
        android:background="#33000000"
        android:orientation="vertical"
        android:padding="3dp" >
        <TextView
            android:id="@+id/tv_bannertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="2dp"
            android:text="我是第一个广告语"
            android:textColor="@android:color/white" />
        <LinearLayout
                   android:id="@+id/points"
                    android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:gravity="center_horizontal"
                    android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>
    <View android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="@color/gray"/>
            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_alignBottom="@+id/banner">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="75dp">
                    <ImageView
                        android:src="@drawable/jingsai1"
                        android:layout_width="130dp"
                        android:layout_height="60dp" />
                    <ImageView
                        android:src="@drawable/kaoyan1"
                        android:layout_width="130dp"
                        android:layout_height="60dp" />
                    <ImageView
                        android:src="@drawable/jianshen1"
                        android:layout_width="130dp"
                        android:layout_height="60dp" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="75dp">
                    <ImageView
                        android:src="@drawable/lvyou1"
                        android:layout_width="130dp"
                        android:layout_height="60dp" />
                    <ImageView
                        android:src="@drawable/yundong1"
                        android:layout_width="130dp"
                        android:layout_height="60dp" />
                    <ImageView
                        android:src="@drawable/more"
                        android:layout_width="130dp"
                        android:layout_height="50dp" />
                </LinearLayout>

            </LinearLayout>
            <View android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="@color/gray"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:background="@color/whitesmoke"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <ImageView
                        android:src="@drawable/image1"
                        android:layout_width="80dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:text="关于举办物业管理知识竞赛的相关事宜"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <View android:layout_height="1dp"
                    android:layout_width="fill_parent"
                    android:background="@color/gainsboro"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <ImageView
                        android:src="@drawable/zuqiubisai"
                        android:layout_width="80dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:text="关于举办第16届足球比赛的相关事宜"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <View android:layout_height="1dp"
                    android:layout_width="fill_parent"
                    android:background="@color/gainsboro"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <ImageView
                        android:src="@drawable/weike"
                        android:layout_width="80dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:text="关于举办微课演讲竞赛的相关事宜"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <View android:layout_height="1dp"
                    android:layout_width="fill_parent"
                    android:background="@color/gainsboro"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <ImageView
                        android:src="@drawable/bianchengbisai"
                        android:layout_width="80dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:text="关于举办阿里云编程竞赛的相关事宜"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <View android:layout_height="0.5dp"
                    android:layout_width="fill_parent"
                    android:background="@color/gainsboro"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <ImageView
                        android:src="@drawable/xian"
                        android:layout_width="80dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:text="关于举办西安互联网竞赛的相关事宜"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
    </ScrollView>
</LinearLayout>


    <include layout="@layout/bottom"/>


</LinearLayout>

