<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whitesmoke"
     >
    <include layout="@layout/top"/>
    <LinearLayout
        android:layout_weight="9"
        android:layout_width="wrap_content"
        android:layout_height="0dp">
<ScrollView
    android:layout_marginTop="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:src="@drawable/python"
            android:layout_width="fill_parent"
            android:layout_height="100dp" />
        <TextView
            android:textColor="@color/black"
            android:text="Python高手都知道的内置函数，你不知道都low了"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Python内置了很多非常巧妙而且强大的内置函数，对于初学者来说，一般不怎么用到，但是熟悉之后，你就会发现很简单。"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <View android:layout_height="1dp"
            android:layout_width="fill_parent"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="170dp">
            <ImageView
                android:src="@drawable/python1"
                android:layout_width="fill_parent"
                android:layout_height="100dp" />
            <TextView
                android:textColor="@color/black"
                android:text="大数据挖掘分析工具集"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="大数据时代需要大数据挖掘，我习惯把大数据分为四个领域"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View android:layout_height="1dp"
            android:layout_width="fill_parent"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="190dp">
            <ImageView
                android:src="@drawable/zuqiubisai"
                android:layout_width="fill_parent"
                android:layout_height="100dp" />
            <TextView
                android:textColor="@color/black"
                android:text="足球比赛在即，组队你准备好了吗"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="即将到来的浙江省高等院校的足球联赛已拉起了帷幕"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View android:layout_height="1dp"
            android:layout_width="fill_parent"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:src="@drawable/python"
                android:layout_width="fill_parent"
                android:layout_height="100dp" />
            <TextView
                android:textColor="@color/black"
                android:text="Python高手都知道的内置函数，你不知道都low了"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Python内置了很多非常巧妙而且强大的内置函数，对于初学者来说，一般不怎么用到，但是熟悉之后，你就会发现很简单。"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="140px"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal" >

        <RadioButton

            style="@style/main_tab_style"
            android:checked="true"
            android:drawableTop="@drawable/guide_home_img"
            android:text="首页"
            android:textColor="@drawable/main_tab_text_color" />

        <RadioButton

            style="@style/main_tab_style"
            android:drawableTop="@drawable/guide_team_img"
            android:text="TEAM圈"
            android:textColor="@drawable/main_tab_text_color" />

        <RadioButton
            android:id="@+id/show"
            style="@style/main_tab_style"
            android:drawableTop="@drawable/guide_fabu_img"
            android:text="发布"
            android:textColor="@drawable/main_tab_text_color" />

        <RadioButton

            style="@style/main_tab_style"
            android:drawableTop="@drawable/guide_news_img"
            android:text="消息"
            android:textColor="@drawable/main_tab_text_color" />

        <RadioButton

            style="@style/main_tab_style"
            android:drawableTop="@drawable/guide_account_img"
            android:text="我"
            android:textColor="@drawable/main_tab_text_color" />
    </RadioGroup>
    </LinearLayout>
